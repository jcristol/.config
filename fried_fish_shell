#!/bin/bash
cecho(){
    BLACK="\033[0;30m"
    BLUE="\033[0;34m"
    GREEN="\033[0;32m"
    CYAN="\033[0;36m"
    RED="\033[0;31m"
    PURPLE="\033[0;35m"
    ORANGE="\033[0;33m"
    LGRAY="\033[0;37m"
    DGRAY="\033[1;30m"
    LBLUE="\033[1;34m"
    LGREEN="\033[1;32m"
    LCYAN="\033[1;36m"
    LRED="\033[1;31m"
    LPURPLE="\033[1;35m"
    YELLOW="\033[1;33m"
    WHITE="\033[1;37m"
    NORMAL="\033[m"

    color=\$${1:-NORMAL}

    echo -ne "$(eval echo ${color})"
    cat

    echo -ne "${NORMAL}"
}

echo "Installing brew and brew packages" | cecho LGREEN
echo
/usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
brew install bat
brew install exa
brew install fish
brew install neovim
brew install watchman


echo "Installing nvm" | cecho LGREEN
echo
curl -o- https://raw.githubusercontent.com/creationix/nvm/v0.33.11/install.sh | bash

echo "Installing fisher the fish package manager" | cecho LGREEN
echo
fish -c "curl https://git.io/fisher --create-dirs -sLo ~/.config/fish/functions/fisher.fish"

echo "Installing useful fish plugins" | cecho LGREEN
echo
fish -c "fisher add edc/bass"
fish -c "fisher add FabioAntunes/fish-nvm"
fish -c "fisher add jethrokuan/z"
fish -c "fisher add laughedelic/fish_logo"
fish -c "fisher add oh-my-fish/theme-default"
fish -c "fisher add cbsghost/fish-legacycolor"
fish -c "cat fried_fish_functions | python ~/.config/fried_fish_scribe.py | fish"

echo "Installing node using fnvm" | cecho LGREEN
echo
fish -c "nvm install node"

echo "Changing the default shell will need your password twice" | cecho LGREEN
echo
chsh -s /usr/local/bin/fish
echo /usr/local/bin/fish | sudo tee -a /etc/shells

echo "Install oh my fish for a dope theme" | cecho LGREEN
echo
fish -c "curl -L https://get.oh-my.fish | fish"
